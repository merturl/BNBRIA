extends ../layout

block content
  .container
    if reserve.id
      h1.page-header 예약 수정

    form(action ='/reserve/#{reserve.id}/edit?_method=PUT',  method='POST')
      h1= reserve.title
      h3 by #{reserve.hostemail}
      .form-group.form-inline
        label(for='persons') 인원
        select.form-control(name='persons')
          option(value='1', selected) 1명
          option(value='2') 2명
          option(value='3') 3명
          option(value='4') 4명   
        .form-group
          label(for='checkin') 체크인
          input(type="date", name='checkin')
          | 
          label(for='checkout') 체크아웃
          input(type="date",name='checkout')
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 완료
